{
  "$schema": "https://raw.githubusercontent.com/nuke-build/nuke/master/source/Nuke.Tooling.Generator/schema.json",
  "references": [
    "https://raw.githubusercontent.com/erichexter/WebConfigTransformRunner/master/Readme.md"
  ],
  "name": "WebConfigTransformRunner",
  "officialUrl": "https://github.com/erichexter/WebConfigTransformRunner",
  "help": "This is a commandline tool to run an ASP.Net web.config tranformation.",
  "nugetPackageId": "WebConfigTransformRunner",
  "packageExecutable": "WebConfigTransformRunner.exe",
  "tasks": [
    {
      "settingsClass": {
        "properties": [
          {
            "name": "WebConfigFilename",
            "type": "string",
            "format": "{value}",
            "help": "The base web.config file"
          },
          {
            "name": "TransformFilename",
            "type": "string",
            "format": "{value}",
            "help": "The transformation web.config file"
          },
          {
            "name": "OutputFilename",
            "type": "string",
            "format": "{value}",
            "help": "The path to the output web.config file"
          }
        ]
      }
    }
  ]
}
